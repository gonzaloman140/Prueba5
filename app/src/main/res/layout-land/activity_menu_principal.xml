<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo8"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="356dp"
            android:layout_height="363dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2"
                android:layout_width="134dp"
                android:layout_height="139dp"
                android:layout_gravity="center"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="140dp"
                android:background="@drawable/verpublicaciones"
                android:onClick="Ver"
                android:text="@string/VerPublicaciones"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button"
                android:layout_width="135dp"
                android:layout_height="119dp"
                android:layout_gravity="center"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="140dp"
                android:background="@drawable/publicar"
                android:onClick="ListaContactos"
                android:text="@string/ListaChat"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="237dp"
            android:layout_height="376dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="82dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button3"
                android:layout_width="130dp"
                android:layout_height="134dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/chat"
                android:filterTouchesWhenObscured="false"
                android:fitsSystemWindows="false"
                android:focusable="false"
                android:onClick="ListaContactos"
                android:text="@string/ListaContactos"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button4"
                android:layout_width="133dp"
                android:layout_height="124dp"
                android:layout_gravity="center|left"
                android:layout_marginTop="20dp"
                android:background="@drawable/emergencia"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textSize="15dp" />


</LinearLayout>