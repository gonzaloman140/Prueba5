<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo8"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="219dp"
        android:layout_height="650dp"
        android:layout_gravity="center"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="82dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button2"
            android:layout_width="134dp"
            android:layout_height="139dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/verpublicaciones"
            android:onClick="Ver"
            android:text="@string/VerPublicaciones"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="135dp"
            android:layout_height="133dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/publicar"
            android:onClick="Publicar2"
            android:text="@string/Publicar2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="130dp"
            android:layout_height="126dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/chat"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            android:layout_width="118dp"
            android:layout_height="113dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/emergencia"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>